<h3>You can edit your Biography </h3>

<div class="row">
<form action ="/biographies/{{biography._id}}" method ="POST" class = "col s12">
<input type="hidden" name="_method" value="PUT">
    <div class="row">
        <div class="input-field">
        <input type="text" id="heading" name="heading" value ="{{biography.heading}}" placeholder="heading input">
        <label for="heading">Heading</label>
    </div>
    </div>

     <div class="row">
        <div class="input-field">
            <select id="status" name="status">
                {{#select biography.status}}
                <option value="public" selected>Public</option>
                <option value="private"> Private</option>
                {{/select}}
            </select>
        <label for="status">Status</label>
        </div>
    </div>


    <div class="row">
      <div class="input-field">
          <h6>Tell your life Biography: </h6>
        <textarea id="body" name="body">{{biography.body}}</textarea>
    </div>
    </div>


    <div class="row">
        <input type="submit" value="Save" class="btn">
        <a href="/dashboard" class="btn orange">Cancel</a>
          
      </div>
  
</form>

</div>