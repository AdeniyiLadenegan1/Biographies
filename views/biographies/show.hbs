<div class="row">
    <div class="col s12 m8">
        <h3>{{biography.heading}}
            <small>{{{editIcon biography.user user biography._id false}}}</small>
        </h3>
        <div class="card biography">
            <div class="card-content">
                <span class="card-title">{{formatDate date 'MMMM Do YYYY, h:mm:ss a'}}</span>
                {{{biography.body}}}
            </div>
        </div>
    </div>
    <div class="col s12 m4">
        <div class="card center-align">
            <div class="card-content">
                <span class="card-title">{{biography.user.displayName}}</span>
                <img src="{{biography.user.image}}" class="circle responsive-img img-small">
            </div>
            <div class="card-action">
                <a href="/biographies/user/{{biography.user._id}}">More From {{biography.user.firstName}}</a>
            </div>
        </div>
    </div>
</div>